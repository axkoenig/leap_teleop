<?xml version="1.0"?>
<launch>
	<!-- load openni2 launch file -->
	<include file="$(find openni2_launch)/launch/openni2.launch"/>

	<!-- launch oculus ros driver -->
    <node name="oculus_driver" pkg="oculus_ros" type="ros_driver">
		<param name="frequency" value="10"/>
	</node>
    
	<!-- launch oculus viewer, subscribes to rgb image from camera -->
	<node name="oculus_viewer" pkg="oculus_ros" type="ros_viewer">
		<param name="camera_topic" value="/camera/rgb/image_raw"/>
	</node>
</launch>